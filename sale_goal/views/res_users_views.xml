<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="act_res_user_2_customers" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('user_id', '=', active_id)]</field>
        <field
      name="context"
    >{"search_default_user_id": active_id, "search_default_customer": 1}</field>
    </record>

    <record id="res_users_view_tree" model="ir.ui.view">
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree" />
        <field name="arch" type="xml">
            <field name="login_date" position="after">
                <field name="sales_goal_monthly" />
                <field name="sales_goal_yearly" />
                <field name="current_month_sale_amount" />
                <field name="current_year_sale_amount" />
            </field>
        </field>
    </record>

    <record id="res_users_view_form" model="ir.ui.view">
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button
          class="oe_stat_button"
          type="action"
          name="%(sale_goal.act_res_user_2_customers)d"
          attrs="{'invisible': [('sale_partner_count', '=', False)]}"
          icon="fa-users"
        >
                    <field
            string="Customers"
            name="sale_partner_count"
            widget="statinfo"
          />
                </button>
            </button>
        </field>
    </record>
</odoo>
