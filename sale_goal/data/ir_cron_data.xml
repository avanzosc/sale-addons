<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record
      forcecreate="True"
      id="ir_cron_res_partner_sales_amount"
      model="ir.cron"
    >
            <field name="name">Customers: update current sales amounts</field>
            <field name="model_id" ref="base.model_res_partner" />
            <field name="state">code</field>
            <field name="code">model.process_current_sale_amount()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field
        name="nextcall"
        eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"
      />
            <field eval="False" name="doall" />
        </record>

        <record forcecreate="True" id="ir_cron_res_users_sales_amount" model="ir.cron">
            <field name="name">Users: update current sales amounts</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="state">code</field>
            <field name="code">model.process_current_sale_amount()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field
        name="nextcall"
        eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 01:00:00')"
      />
            <field eval="False" name="doall" />
        </record>
    </data>
</odoo>
