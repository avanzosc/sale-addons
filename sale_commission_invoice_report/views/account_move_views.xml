<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="sale_commission.view_move_form" />
        <field name="arch" type="xml">
            <field name="commission_total" position="move" />
            <div name="journal_div" position="after">
                <field
          name="commissionable_tax_base"
          string="Commissionable tax base"
          attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"
        />
                <field
          name="percentage_average_commission"
          string="% Average commission"
          attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"
        />
                <field
          name="commission_total"
          string="Commissions"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
          attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"
        />
            </div>
        </field>
    </record>
</odoo>
