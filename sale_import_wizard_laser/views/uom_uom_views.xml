        <field name="model">uom.category</field>
        <field name="inherit_id" ref="uom.product_uom_categ_form_view" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='uom_ids']/tree/field[@name='ratio']"
        position="attributes"
      >
                <attribute name="digits">[41,6]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
