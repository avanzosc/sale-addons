<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_import_view_form" model="ir.ui.view">
        <field name="model">sale.order.import</field>
        <field name="inherit_id" ref="sale_import_wizard.sale_order_import_view_form" />
        <field name="arch" type="xml">
            <button name="action_import_file" position="attributes">
                <attribute name="context">{'from_sale_wizard_laser': True}</attribute>
            </button>
            <field name="warehouse_id" position="before">
                <field name="product_categ_id" />
                <field name="product_uom_id" />
                <field name="product_volume_uom_id" />
                <field name="route_ids" widget="many2many_checkboxes" />
            </field>
            <button name="button_open_sale_order" position="after">
                <button
          name="button_open_created_products"
          type="object"
          attrs="{'invisible':[('created_products_count', '=', 0)]}"
          class="oe_stat_button"
          icon="fa-folder-open"
        >
                    <field name="created_products_count" widget="statinfo" />
                </button>
                <button
          name="button_open_created_boms"
          type="object"
          attrs="{'invisible':[('created_boms_count', '=', 0)]}"
          class="oe_stat_button"
          icon="fa-folder-open"
        >
                    <field name="created_boms_count" widget="statinfo" />
                </button>
            </button>
        </field>
    </record>
</odoo>
