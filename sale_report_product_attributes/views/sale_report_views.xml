<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_attribute_sale_report_view_pivot" model="ir.ui.view">
        <field name="model">product.attribute.sale.report</field>
        <field name="arch" type="xml">
            <pivot string="Competences Report" disable_linking="True">
                <field name="order_line_id" type="row" />
                <field name="product_id" type="row" />
                <field name="attribute_id" type="col" />
                <field name="attribute_value_id" type="col"/>
                <field name="product_uom_qty" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="product_attribute_sale_report_view_tree" model="ir.ui.view">
        <field name="model">product.attribute.sale.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_line_id"/>
                <field name="product_id"/>
                <field name="attribute_id"/>
                <field name="attribute_value_id"/>
            </tree>
        </field>
    </record>
    <record id="product_attribute_sale_report_view_search" model="ir.ui.view">
        <field name="model">product.attribute.sale.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_line_id"/>
                <field name="product_id"/>
                <field name="attribute_id"/>
                <field name="attribute_value_id"/>
            </search>
        </field>
    </record>

    <record id="action_product_attribute_sale_report"
            model="ir.actions.act_window">
         <field name="name">Product Attribute Sales</field>
         <field name="type">ir.actions.act_window</field>
         <field name="view_id" ref="sale_report_product_attributes.product_attribute_sale_report_view_pivot" />
         <field name="res_model">product.attribute.sale.report</field>
         <field name="view_type">form</field>
         <field name="view_mode">pivot,tree,form</field>
         <field name="search_view_id" ref="product_attribute_sale_report_view_search"/>
    </record>
    <menuitem id="menu_product_attribute_sale_report"
              name="Product Attribute Sales"
              action="action_product_attribute_sale_report"
              parent="sale.menu_sale_report"
              sequence="2"/>
</odoo>
