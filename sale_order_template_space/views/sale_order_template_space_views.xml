<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_template_space_form_view" model="ir.ui.view">
        <field name="name">sale.order.template.space.form</field>
        <field name="model">sale.order.template.space</field>
        <field name="arch" type="xml">
            <form string="Spaces">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                        <notebook>
                            <page string="Sale Order Templates">
                                <field name="sale_template_ids" nolabel="1" />
                            </page>
                        </notebook>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_template_space_tree_view" model="ir.ui.view">
        <field name="name">sale.order.template.space.tree.view</field>
        <field name="model">sale.order.template.space</field>
        <field name="arch" type="xml">
            <tree string="Spaces">

                <field name="name" />
                <field
          name="sale_template_ids"
          widget="many2many_tags"
          optional="show"
        />
            </tree>
        </field>
    </record>

    <record id="sale_order_template_space_search_view" model="ir.ui.view">
        <field name="name">sale.order.template.space.search.view</field>
        <field name="model">sale.order.template.space</field>
        <field name="arch" type="xml">
            <search string="Search Spaces">
                <field name="name" />
                <field name="sale_template_ids" />
           </search>
        </field>
    </record>

    <record id="action_sale_order_template_space" model="ir.actions.act_window">
        <field name="name">Spaces</field>
        <field name="res_model">sale.order.template.space</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sale_order_template_space_tree_view" />
        <field name="search_view_id" ref="sale_order_template_space_search_view" />
    </record>

    <menuitem
    id="menu_sale_order_template_space"
    name="Spaces"
    sequence="0"
    action="action_sale_order_template_space"
    parent="sale.menu_sales_config"
    groups="sales_team.group_sale_manager"
  />
</odoo>
