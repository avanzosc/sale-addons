<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_template_line_editable_tree" model="ir.ui.view">
        <field name="name">sale.order.template.line.editable.tree</field>
        <field name="model">sale.order.template.line</field>
        <field name="arch" type="xml">
            <tree string="Sales Order Template Lines" editable="bottom" create="false">
                <field name="company_id" invisible="1" />
                <field name="sequence" widget="handle" />
                <field name="sequence_to_view" optional="show" readonly="1" />
                <field
          name="product_id"
          attrs="{'readonly': [('display_type','in', ('line_section', 'line_note'))]}"
        />
                <field name="product_categ_id" optional="show" readonly="1" />
                <field name="display_type" optional="show" />
                <field name="name" />
                <field name="space_ids" widget="many2many_tags" />
                <field name="product_uom_qty" />
                <field name="product_uom_category_id" invisible="1" />
                <field
          name="product_uom_id"
          groups="uom.group_uom"
          attrs="{'required': [('display_type', '=', False)]}"
        />
            </tree>
        </field>
    </record>

    <record id="sale_order_template_line_filter" model="ir.ui.view">
        <field name="name">sale.order.template.line.filter</field>
        <field name="model">sale.order.template.line</field>
        <field name="priority" eval="15" />
        <field name="arch" type="xml">
            <search string="Search Sales Order Template Lines">
                <field name="sale_order_template_id" />
                <field name="product_id" />
                <field name="product_categ_id" />
                <field name="name" />
                <field name="space_ids" />
                <field name="display_type" />
                <group expand="0" string="Group By">
                    <filter
            string="Quotation Template"
            name="group-template"
            domain="[]"
            context="{'group_by': 'sale_order_template_id'}"
          />
                    <filter
            string="Product"
            name="group-product"
            domain="[]"
            context="{'group_by': 'product_id'}"
          />
                    <filter
            string="Product Category"
            name="group-product_category"
            domain="[]"
            context="{'group_by': 'product_categ_id'}"
          />
                    <filter
            string="Line Type"
            name="group-display_type"
            domain="[]"
            context="{'group_by': 'display_type'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="action_editabable_template_orders_lines" model="ir.actions.act_window">
        <field name="name">Template Order Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.template.line</field>
        <field name="view_mode">tree,form</field>
        <field
      name="view_id"
      ref="sale_order_template_space.sale_order_template_line_editable_tree"
    />
    </record>
</odoo>
