<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_attachment_tree" model="ir.ui.view">
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_tree" />
        <field name="arch" type="xml">
            <field name="res_model" position="after">
                <field name="attach_in_sales_orders" />
            </field>
        </field>
    </record>
    <record id="view_attachment_form" model="ir.ui.view">
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form" />
        <field name="arch" type="xml">
            <field name="mimetype" position="after">
                <field name="attach_in_sales_orders"
                    attrs="{'invisible': [('res_model','!=','product.template')]}"/>
            </field>
        </field>
    </record>
    <record id="view_document_file_kanba" model="ir.ui.view">
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="mail.view_document_file_kanban" />
        <field name="arch" type="xml">
            <field name="id" position="after">
                <field name="attach_in_sales_orders" />
            </field>
            <xpath expr="//samp[@class='text-muted']" position="after">
                <br/>
                <t t-if="record.attach_in_sales_orders.raw_value">
                    <strong>Attachmets in sales orders</strong>
                </t>
                <t t-else="" >
                    <strong>No attachmets in sales orders</strong>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
