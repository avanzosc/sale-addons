<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='price_tax']" position="after">
                <button name="%(sale_order_line_attachment.action_wiz_catch_attachment_from_product)d"
                    string="Catch Attachments" type="action" icon="fa-paperclip"/>
                <button name="action_get_attachment_view" string="View Attachments" type="object" icon="fa-list"/>
            </xpath>
        </field>
    </record>
</odoo>

