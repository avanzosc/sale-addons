<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_import_view_tree" model="ir.ui.view">
        <field name="model">sale.order.import</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'done'" decoration-bf="state == 'pass'">
                <field name="name" />
                <field name="file_date" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="sale_order_import_view_form" model="ir.ui.view">
        <field name="model">sale.order.import</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="action_import_file"
            string="Import"
            type="object"
            attrs="{'invisible': [('state', '=', 'done')]}"
          />
                    <button
            name="action_validate"
            string="Validate"
            type="object"
            attrs="{'invisible': [('state', 'not in', ('2validate','error'))]}"
          />
                    <button
            name="action_process"
            string="Process"
            type="object"
            attrs="{'invisible': [('state', 'not in', ('2validate','pass','error'))]}"
          />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              string="Import Lines"
              type="object"
              name="button_open_import_line"
              attrs="{'invisible':[('import_line_ids', '=', [])]}"
              class="oe_stat_button"
              icon="fa-bars"
            />
                        <button
              type="object"
              name="button_open_sale_order"
              attrs="{'invisible':[('sale_order_count', '=', 0)]}"
              class="oe_stat_button"
              icon="fa-folder-open"
            >
                            <field name="sale_order_count" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="filename" />
                            <field name="data" filename="filename" />
                            <field name="file_date" />
                        </group>
                        <group>
                            <field name="warehouse_id" />
                            <field
                name="company_id"
                groups="base.group_multi_company"
                options="{'no_create': True}"
              />
                        </group>
                    </group>
                    <notebook>
                        <page string="Imported Lines">
                            <field name="import_line_ids" />
                        </page>
                        <page
              string="Error Log"
              attrs="{'invisible':[('log_info','=','')]}"
            >
                            <field name="log_info" />
                        </page>
                        <page
              string="Help"
              name="help_page"
              attrs="{'invisible': [('state', '=', 'done')]}"
            >
                            <group>
                                <div style="margin-top: 4px;">
                                    <h3>Help with Excel column names</h3>
                                    <p
                  >You must use this column names in order to fill the table:</p>
                                    <ul name="tutorial">
                                        <li><code
                      >NumeroPedidoCliente</code>: this will fill <b
                      >Order Customer Reference</b></li>
                                        <li><code
                      >NombreProducto</code>: this will fill <b>Product</b></li>
                                        <li><code
                      >CodigoProducto</code>: this will fill <b>Product</b></li>
                                        <li><code
                      >CodigoBarrasProducto</code>: this will fill <b>Product</b></li>
                                        <li><code
                      >NombreCliente</code>: this will fill <b>Customer</b></li>
                                        <li><code>NIFCliente</code>: this will fill <b
                      >Customer</b></li>
                                        <li><code
                      >ReferenciaCliente</code>: this will fill <b>Customer</b></li>
                                        <li><code
                      >NombreDireccionFacturacion</code>: this will fill <b
                      >Invoice Address</b></li>
                                        <li><code
                      >NIFDireccionFacturacion</code>: this will fill <b
                      >Invoice Address</b></li>
                                        <li><code
                      >ReferenciaDireccionFacturacion</code>: this will fill <b
                      >Invoice Address</b></li>
                                        <li><code
                      >NombreDireccionEnvio</code>: this will fill <b
                      >Delivery Address</b></li>
                                        <li><code
                      >NIFDireccionEnvio</code>: this will fill <b
                      >Delivery Address</b></li>
                                        <li><code
                      >ReferenciaDireccionEnvio</code>: this will fill <b
                      >Delivery Address</b></li>
                                        <li><code>Cantidad</code>: this will fill <b
                      >Quantity</b></li>
                                        <li><code
                      >PrecioUnitario</code>: this will fill <b>Price Unit</b></li>
                                        <li><code>FechaPedido</code>: this will fill <b
                      >Order Date</b></li>
                                        <li><code>FechaEntrega</code>: this will fill <b
                      >Delivery Date</b></li>
                                        <li><code
                      >TotalImportePedido</code>: this will fill <b
                      >Total amount from import</b></li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="sale_order_import_view_search" model="ir.ui.view">
        <field name="model">sale.order.import</field>
        <field name="arch" type="xml">
            <search>
                <field name="file_date" />
                <filter
          name="pending"
          string="Pending"
          domain="[('state', '!=', 'done')]"
        />
                <filter
          name="finished"
          string="Done"
          domain="[('state', '=', 'done')]"
        />
                <filter
          name="errored"
          string="Error"
          domain="[('state', '=', 'error')]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Status"
            name="state_group"
            domain="[]"
            context="{'group_by':'state'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="sale_order_import_action" model="ir.actions.act_window">
        <field name="name">Import Sale Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.import</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sale_order_import_view_tree" />
    </record>

    <menuitem
    id="sale_order_import_menu"
    action="sale_order_import_action"
    parent="base_import_wizard.base_import_menu"
    sequence="20"
  />

    <menuitem
    id="sale_order_import_menu2"
    action="sale_order_import_action"
    parent="sale.menu_sale_config"
    sequence="10"
  />

</odoo>
