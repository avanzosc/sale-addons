<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="invoicing_setting_container" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="return_journal">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Return Journal</span>
                        <div class="text-muted">
                            Account journal for returns
                        </div>
                        <div class="text-muted">
                            <field name="return_journal_id" options="{'no_create': True}"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
