<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_billing_type_tree_view" model="ir.ui.view">
        <field name="name">res.partner.billing.type.tree.view</field>
        <field name="model">res.partner.billing.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="res_partner_billing_type_search_view" model="ir.ui.view">
        <field name="name">res.partner.billing.type.search.view</field>
        <field name="model">res.partner.billing.type</field>
        <field name="arch" type="xml">
            <search string="Search billing types">
                <field name="name" />
           </search>
        </field>
    </record>

    <record id="action_res_partner_billing_type" model="ir.actions.act_window">
        <field name="name">Billing types</field>
        <field name="res_model">res.partner.billing.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_partner_billing_type_tree_view" />
        <field name="search_view_id" ref="res_partner_billing_type_search_view" />
    </record>

    <menuitem
    id="res_partner_billing_type"
    name="Billing types"
    sequence="50"
    action="action_res_partner_billing_type"
    parent="sale.menu_sale_config"
    groups="sales_team.group_sale_manager"
  />
</odoo>
