<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sales_order_line_input_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field
      name="inherit_id"
      ref="sale_order_line_input.view_sales_order_line_input_tree"
    />
        <field name="arch" type="xml">
            <field name="product_uom_qty" position="after">
                <field name="planned_quantity" optional="show" readonly="1" />
                <field
          name="difference_between_ordered_planned"
          optional="show"
          readonly="1"
        />
            </field>
        </field>
    </record>
</odoo>
