<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_line_view_order_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale_line_pending_info.sale_order_line_view_order_tree" />
        <field name="arch" type="xml">
            <field name="amount_pending_invoicing" position="after">
                <field name="amount_pending_invoicing_with_discount"
                        sum="Total pending invoicing with discount" widget="monetary"
                        optional="show"/>
            </field>
        </field>
    </record>

    <record id="sale_order_line_view_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale_line_pending_info.sale_order_line_view_tree" />
        <field name="arch" type="xml">
            <field name="amount_pending_invoicing" position="after">
                <field name="amount_pending_invoicing_with_discount"
                        sum="Total pending invoicing with discount" widget="monetary"
                        optional="show"/>
            </field>
        </field>
    </record>

    <record id="sale_order_line_view_form" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale_line_pending_info.sale_order_line_view_form" />
        <field name="arch" type="xml">
            <field name="amount_pending_invoicing" position="after">
                <field name="amount_pending_invoicing_with_discount" widget="monetary" />
            </field>
        </field>
    </record>
</odoo>
