<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="order_partner_id" invisible="1" />
                <field name="student_id" domain="['|', ('id', '=', order_partner_id), ('parent_id', '=', order_partner_id)]"/>
                <field name="education_center_id" />
                <field name="is_member" />
                <field name="event_id" domain="['|', ('customer_id', '=', education_center_id), ('customer_id.education_center_id', '=', False)]"/>
             </xpath>
             <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field name="order_partner_id" invisible="1" />
                <field name="student_id" domain="['|', ('id', '=', order_partner_id), ('parent_id', '=', order_partner_id)]"/>
                <field name="education_center_id" />
                <field name="is_member" />
                <field name="event_id" domain="['|', ('customer_id', '=', education_center_id), ('customer_id.education_center_id', '=', False)]"/>
             </xpath>
        </field>
    </record>
</odoo>
