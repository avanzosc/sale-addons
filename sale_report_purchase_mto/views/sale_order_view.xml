<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale.sale_order_buttons">
            <field name="name">sale.order.buttons</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <h1 position="after">
                    <div class="oe_right oe_button_box" name="buttons">
                    </div>
                </h1>
            </field>
        </record>
        <record model="ir.ui.view" id="sale_order_buttons_form_view">
            <field name="name">sale.order.buttons.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_buttons"/>
            <field name="arch" type="xml">
                <div name="buttons" position="inside">
                    <button class="oe_stat_button" name="%(act_report_sale_mto_by_sale)d"
                    icon="fa-file-text-o" type="action" string="Report Sale MTO"/>
                </div>
            </field>
        </record>
    </data>
</openerp>
