<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='lot_id']" position="before">
                <field name="tracking" invisible="1"/>
                <field name="possible_lot_ids" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='lot_id']" position="before">
                <field name="tracking" invisible="1"/>
                <field name="possible_lot_ids" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='lot_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('tracking', '=', 'none')]}</attribute>
                <attribute name="domain">[('id', 'in', possible_lot_ids)]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='lot_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('tracking', '=', 'none')]}</attribute>
                <attribute name="domain">[('id', 'in', possible_lot_ids)]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='lot_id']" position="attributes">
                <attribute name="context">{'default_product_id': product_id, 'default_company_id': company_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban/field[@name='product_id']" position="after">
                <field name="lot_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban//t[@t-esc='record.product_id.value']/.." position="after">
                <div t-if="record.lot_id">
                    <span t-if="record.lot_id">Lot: <t t-esc="record.lot_id.value"/>
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
