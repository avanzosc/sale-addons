<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="payment_term_id" position="before">
                <field name="manufacturing_order_cost" />
                <field name="sale_margin_with_manufacturing_order" />
            </field>
        </field>
    </record>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <field name="amount_untaxed" position="after">
                <field name="manufacturing_order_cost" optional="show"
                    sum="Total manufacturing orders costs"/>
                <field name="sale_margin_with_manufacturing_order" optional="show"
                    sum="Total sale margin with manufacturing orders"/>
            </field>
        </field>
    </record>

    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="amount_untaxed" position="after">
                <field name="manufacturing_order_cost" optional="show"
                    sum="Total manufacturing orders costs"/>
                <field name="sale_margin_with_manufacturing_order" optional="show"
                    sum="Total sale margin with manufacturing orders"/>
            </field>
        </field>
    </record>
</odoo>
