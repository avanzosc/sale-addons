<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']"
                   position="after">
                <field name="originator_id" />
                <field name="payer_ids" widget="many2many_tags"
                       context="{'default_line_id': active_id}" />
                <field name="total_percentage" invisible="True" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree"
                   position="attributes">
                <attribute name="decoration-danger">total_percentage != 100.0</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='name']"
                   position="after">
                <group>
                    <field name="originator_id" />
                    <field name="payer_ids"
                           context="{'default_line_id': active_id}">
                        <tree editable="top">
                            <field name="line_id" invisible="True" />
                            <field name="payer_id" />
                            <field name="pay_percentage" />
                        </tree>
                    </field>
                </group>
            </xpath>
            <notebook position="before">
                <group>
                    <group>
                        <field name="child_id" />
                        <field name="course_id" />
                        <field name="opportunity_id" />
                    </group>
                    <group>
                        <field name="school_id" />
                        <field name="academic_year_id" />
                    </group>
                </group>
            </notebook>
        </field>
    </record>

    <record id="view_order_tree_inh_sale_school" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="opportunity_id" />
                <field name="child_id" />
                <field name="course_id" />
                <field name="school_id" />
                <field name="academic_year_id" />
            </field>
        </field>
    </record>

    <record id="view_order_quotation_inh_sale_school" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="opportunity_id" />
                <field name="child_id" />
                <field name="course_id" />
                <field name="school_id" />
                <field name="academic_year_id" />
            </field>
        </field>
    </record>

    <record id="view_sales_order_filter_inh_sale_school" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="after">
                <field name="opportunity_id" />
                <field name="child_id" />
                <field name="course_id" />
                <field name="school_id" />
                <field name="academic_year_id" />
            </field>
            <filter name="customer" position="after">
                <filter name="opportunity_id" string="Opportunity" domain="[]" context="{'group_by':'opportunity_id'}"/>
                <filter name="child_id" string="Child" domain="[]" context="{'group_by':'child_id'}"/>
                <filter name="course_id" string="Initial school course" domain="[]" context="{'group_by':'course_id'}"/>
                <filter name="school_id" string="School" domain="[]" context="{'group_by':'school_id'}"/>
                <filter name="academic_year_id" string="Academic year" domain="[]" context="{'group_by':'academic_year_id'}"/>
            </filter>
        </field>
    </record>

    <record id="sale_order_line_view_form" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id"
               ref="sale.sale_order_line_view_form_readonly" />
        <field name="arch" type="xml">
            <field name="order_partner_id" position="after">
                <field name="originator_id" />
                <field name="payer_ids"
                       context="{'default_line_id': active_id}">
                    <tree editable="top">
                        <field name="line_id" invisible="True" />
                        <field name="payer_id" />
                        <field name="pay_percentage" />
                    </tree>
                </field>
                <field name="total_percentage" />
            </field>
        </field>
    </record>

    <record id="sale_order_line_view_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="originator_id" />
                <field name="payer_ids" />
                <field name="total_percentage" />
            </field>
        </field>
    </record>

    <record id="sale_order_line_view_search" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_filter" />
        <field name="arch" type="xml">
            <field name="order_partner_id" position="after">
                <field name="originator_id" />
            </field>
            <filter name="salesperson" position="after">
                <filter string="Originator" name="originator" domain="[]"
                        context="{'group_by':'originator_id'}"/>
            </filter>
        </field>
    </record>

</odoo>
