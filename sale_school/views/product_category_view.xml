<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_category_search_view_inh_sale_school" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_search_view" />
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="originator_id" />
                <group expand="1" string="Group By">
                    <filter string="Originator" name="originator_group"
                            domain="[]" context="{'group_by':'originator_id'}"/>
                </group>
            </field>
        </field>
    </record>

    <record id="product_category_form_view_inh_sale_school" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="originator_id" />
            </field>
        </field>
    </record>

    <record id="product_category_list_view_inh_sale_school" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view" />
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="originator_id" />
            </field>
        </field>
    </record>

</odoo>
