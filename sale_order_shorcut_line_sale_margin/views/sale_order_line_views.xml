<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sales_order_line_input_tree" model="ir.ui.view">
        <field name="name">sale.order.line.editable.tree</field>
        <field name="model">sale.order.line</field>
        <field
      name="inherit_id"
      ref="sale_order_line_input.view_sales_order_line_input_tree"
    />
        <field name="arch" type="xml">
            <field name="tax_id" position="before">
                <field name="purchase_price" optional="show" />
                <field name="margin" optional="show" />
                <field name="margin_percent" optional="show" />
            </field>
        </field>
    </record>
</odoo>
