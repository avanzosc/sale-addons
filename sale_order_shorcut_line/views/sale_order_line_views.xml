<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_line_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_categ_id" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_sales_order_line_filter" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_filter" />
        <field name="arch" type="xml">
            <field name="salesman_id" position="after">
                <field name="product_categ_id" />
                <field name="section_line_id" />
            </field>
            <filter name="salesperson" position="after">
                <filter
          string="Product Category"
          name="product-categ"
          domain="[]"
          context="{'group_by':'product_categ_id'}"
        />
                <filter
          string="Section line"
          name="section-line"
          domain="[]"
          context="{'group_by':'section_line_id'}"
        />
            </filter>
        </field>
    </record>

    <record id="view_sales_order_line_input_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field
      name="inherit_id"
      ref="sale_order_line_input.view_sales_order_line_input_tree"
    />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_categ_id" optional="show" />
            </field>
        </field>
    </record>
</odoo>
