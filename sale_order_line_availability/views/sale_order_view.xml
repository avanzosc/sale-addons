<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']"
        position="before"
      >
                <field name="qty_available" optional="show" />
                <field name="virtual_available" optional="show" />
            </xpath>
            <xpath
        expr="//field[@name='order_line']/form//field[@name='product_uom_readonly']"
        position="after"
      >
                <field name="qty_available" readonly="1" />
                <field name="virtual_available" readonly="1" />
            </xpath>
        </field>
    </record>
</odoo>
