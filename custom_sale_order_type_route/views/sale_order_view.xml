<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_invoice_id" position="after">
                <field name="deliverement_menu" invisible="1"/>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_create': [('deliverement_menu', '=', True)]}</attribute>
            </field>
            <field name="type_id" position="attributes">
                <attribute name="options">{'no_create': [('deliverement_menu', '=', True)]}</attribute>
            </field>
            <group name="partner_details" position="inside">
                <field name="type_id" attrs="{'invisible': [('deliverement_menu', '=', False)]}" required="1"/>
            </group>
            <group name="partner_details" position="inside">
                <field name="date_order" attrs="{'invisible': [('deliverement_menu', '=', False)]}"/>
            </group>
            <group name="partner_details" position="inside">
                <field name="commitment_date" attrs="{'invisible': [('deliverement_menu', '=', False)]}"/>
            </group>
            <field name="partner_invoice_id" position="attributes">
                <attribute name="attrs">{'invisible': [('deliverement_menu', '=', True)]}</attribute>
            </field>
            <field name="partner_shipping_id" position="attributes">
                <attribute name="attrs">{'invisible': [('deliverement_menu', '=', True)]}</attribute>
            </field>
            <field name="warehouse_id" position="attributes">
                <attribute name="attrs">{'invisible': [('deliverement_menu', '=', True)]}</attribute>
            </field>
            <field name="user_id" position="attributes">
                <attribute name="attrs">{'invisible': [('deliverement_menu', '=', True)]}</attribute>
            </field>
            <group name="order_details" position="attributes">
                <attribute name="attrs">{'invisible': [('deliverement_menu', '=', True)]}</attribute>
            </group>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//label[@for='qty_pending_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='qty_pending_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//label[@for='qty_invoiced']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//div[@name='invoiced_qty']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//label[@for='qty_pending_invoicing']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='qty_pending_invoicing']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//label[@for='qty_shipped_pending_invoicing']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='qty_shipped_pending_invoicing']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='container']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='tax_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//div[@name='invoice_lines']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//label[@for='customer_lead']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//div[@name='lead']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='route_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_packaging']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.deliverement_menu', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_route_type_sales" model="ir.actions.act_window">
        <field name="name">Sales</field>
        <field name="res_model">sale.order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('not_route_type', '=', False)]</field>
        <field name="context">{"search_default_sale_type": 1, "default_deliverement_menu": True, "search_default_pending_delivery": 1}</field>
    </record>

    <record id="action_my_route_type_sales" model="ir.actions.act_window">
        <field name="name">My Sales</field>
        <field name="res_model">sale.order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('not_route_type', '=', False), ('user_id', '=', uid)]</field>
        <field name="context">{"default_deliverement_menu": True, "search_default_pending_delivery": 1}</field>
    </record>

    <menuitem name="Deliverymen" id="deliverymen_menu" sequence="130" web_icon="custom_sale_order_type_route,static/description/deliveremen.png"/>

    <menuitem id="deliverymen_menu_my_sales" name="My Sales" parent="deliverymen_menu" sequence="5"/>

    <menuitem id="deliverymen_menu_sales" name="Sales" parent="deliverymen_menu" sequence="10"/>

    <menuitem action="action_route_type_sales" name="Sales" id="menu_route_type_sales" parent="deliverymen_menu_sales" sequence="10"/>

    <menuitem action="action_my_route_type_sales" name="My Sales" id="menu_my_route_type_sales" parent="deliverymen_menu_my_sales" sequence="5"/>

</odoo>
