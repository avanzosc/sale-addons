<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="payment_term_id" position="before">
                <field name="sale_order_cost" />
                <field name="sale_order_margin" />
            </field>
            <xpath
        expr="//field[@name='order_line']/tree/field[@name='company_id']"
        position="after"
      >
                <field name="sale_line_cost" optional="show" sum="Total lines costs" />
                <field
          name="sale_line_margin"
          optional="show"
          sum="Total lines margin"
        />
            </xpath>
        </field>
    </record>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <field name="amount_untaxed" position="after">
                <field
          name="sale_order_cost"
          optional="show"
          sum="Total orders costs"
        />
                <field
          name="sale_order_margin"
          optional="show"
          sum="Total orders margin"
        />
            </field>
        </field>
    </record>

    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="amount_untaxed" position="after">
                <field
          name="sale_order_cost"
          optional="show"
          sum="Total orders costs"
        />
                <field
          name="sale_order_margin"
          optional="show"
          sum="Total orders margin"
        />
            </field>
        </field>
    </record>
</odoo>
