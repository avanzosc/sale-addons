<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="wiz_change_sequence_in_sale_line_form_view" model="ir.ui.view">
        <field name="name">wiz.change.sequence.in.sale.line.form.view</field>
        <field name="model">wiz.change.sequence.in.sale.line</field>
        <field name="arch" type="xml">
            <form string="Change sale line sequence">
                <group>
                    <field name="sale_line_id" invisible="1"/>
                    <field name="actual_sequence" readonly="1"/>
                    <field name="new_sequence" required="1"/>
                </group>
                <newline />
                <footer>
                    <button string="Change sequence"  name="button_change_sequence"
                        type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wiz_change_sequence_in_sale_line_action" model="ir.actions.act_window">
        <field name="name">Change sale line sequence</field>
        <field name="res_model">wiz.change.sequence.in.sale.line</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
